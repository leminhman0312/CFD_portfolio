import math
import numpy as np


# ============================================================================
# Error norms
# ============================================================================
def err_L2(imax: int, a: np.ndarray, b: np.ndarray) -> float:
    s = 0.0
    for i in range(1, imax + 1):
        e = a[i] - b[i]
        s += e * e
    return math.sqrt(s / float(imax))


def err_Linf(imax: int, a: np.ndarray, b: np.ndarray) -> float:
    m = 0.0
    for i in range(1, imax + 1):
        e = abs(a[i] - b[i])
        if e > m:
            m = e
    return m
